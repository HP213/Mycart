<% include ./partials/header %>


<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="charge-error" class="alert alert-success <%if(noMessage){%> hidden <%}%>">
    <%-successMsg%>
  </div>
  </div>
  </div>


<div class="container">
  <!-- <div class="row"> -->
  <%for(product of products){%>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img  class = 'img-responsive' src="<%-product.imagePath%>" alt="...">
        <div class="caption">
          <h3><%-product.title%></h3>
          <p class = 'description'><%-product.description%></p>
          <div class = 'clearfix'>
            <div class = "price pull-left"><%-product.price%>Rs</div>
            <a href="/addtocart/<%=product._id%>" class="btn btn-success pull-right" role="button">Add To Cart</a>
          </div>

        </div>
      </div>
    </div>
    <%}%>
</div>

<% include ./partials/footer %>
